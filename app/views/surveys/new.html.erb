<div class="jumbotron jumbotron-fluid mx-auto">
  <div class="container">
    <h1 class="display-4">Create New Survey</h1>

    <%= form_with scope: :survey, url: surveys_path,local: true, html: {class: "lead"} do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Enter description" %>
      </div>
      <div class="form-group form-check">
        <%= f.check_box :is_active, class: "form-check-input" %>     
        <label class="form-check-label">Set as  active survey</label>
      </div>
      <%= f.submit "Create Survey", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>