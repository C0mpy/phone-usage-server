<div class="jumbotron jumbotron-fluid mx-auto">
  <div class="container">
    <h1>Survey Result</h1><br>
    <table class="table table-hover table-dark">
      <tbody>
        <tr>
          <td><strong>Survey Title</strong></td>
          <td><%= @survey.title %></td>
        </tr>
        <tr>
          <td><strong>Survey Description</strong></td>
          <td><%= @survey.description %></td>
        </tr>
      </tbody>
    </table><br><br>
    <h1>Question Responses</h1><br>
    <table class="table table-dark">
      <thead>
        <th scope="col">Question Text</th>
        <th scope="col">Response Text</th>
      </thead>
      <tbody>
        <% @question_responses.each do |qr| %>
          <tr>
            <td><%= qr.question.content %></td>
            <td><%= qr.response %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Back', user_results_path %>
  </div>
</div>